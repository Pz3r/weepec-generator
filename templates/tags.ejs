<!DOCTYPE html>
<html>
<head>
  <script
        src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
  <script src="js/textFit.min.js"></script>
  <script src="js/jQuery-Inline-SVG-Plugin.js"></script>
  <script>
    $(document).ready(function() {
      textFit(document.getElementsByClassName('name-container'), { alignVert: true, alignHoriz: true, multiLine: true, minFontSize: 35 });
      textFit(document.getElementsByClassName('qr-id'), { alignVert: true, alignHoriz: true, multiLine: false });
      //$('img').inlineSvg();
    });
  </script>
  <meta charset="utf-8">
  <title>Placas - Weepec</title>
  <style>
    @font-face {
      font-family: 'Angelface';
      src: url('fonts/Angelface.otf') format('opentype');
    }

    @font-face {
      font-family: 'Montserrat-Bold';
      font-weight: bold;
      src: url('fonts/Montserrat-Bold.otf') format('opentype');
    }

    @media print {
      .page-break { page-break-after: always; }
    }

    * {
      margin: 0;
      padding: 0;
    }
    .tag-container {
      padding: 0.5mm;
      width: 45mm;
      height: 25mm;
      background-image: url('images/placa_layout.png');
      background-size: contain;
      background-position: center;
      background-repeat: no-repeat;
      margin-bottom: 5px;
    }
    .name-container {
      width: 23.5mm;
      height: 16.0mm;
      position: relative;
      top: 6.5mm;
      left: 4.5mm;
      font-family: 'Angelface';
      color: #6600cc;
    }
    .qr-container {
      width: 13mm;
      height: 14.5mm;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      position: relative;
      bottom: 10.0mm;
      left: 27.5mm;
    }
    .qr-image {
      width: 13mm;
      height: 13mm;
    }
    .qr-id {
      width: 13mm;
      height: 1.5mm;
      font-family: 'Montserrat-Bold';
      font-weight: bold;
      font-size: 4pt;
      color: #004d00;
      text-align: center;
    }
    .page-break {

    }
  </style>
</head>
<body>
  <div class="page-break">
  <% for (var i = 0; i < data.length; i++) { %>
    <div class="tag-container">
      <div class="name-container">
      <% var dogName = data[i]['perro'].split(" ")[0] %>
      <%= dogName.charAt(0).toUpperCase() + dogName.substr(1).toLowerCase() %>
      </div>
      <div class="qr-container">
        <div class="qr-image">
          <!-- <img src="<%= 'qrs/' + 'A00af221308' + '.png' %>" style="width: 13mm; height: 13mm;"> -->
          <img src="<%= 'qrs/' + data[i]['codigo_qr'] + '.svg' %>" style="width: 13mm; height: 13mm;">
        </div>
        <div class="qr-id">
          <%= data[i]['codigo_qr'] %>
        </div>
      </div>
    </div>
  <% } %>
  </div>
</body>
</html>
